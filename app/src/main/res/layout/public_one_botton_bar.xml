<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.xuxiang.common.util.bar.StatusBarHeightView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:background="@null"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp18"
            android:layout_toRightOf="@+id/ibtn_title_bar_left"
            android:layout_toLeftOf="@+id/ib_title_bar_right"
            />

        <ImageButton
            android:id="@+id/ibtn_title_bar_left"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@null"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:gravity="center"
            android:onClick="onBack"
            android:src="@mipmap/title_back" />

        <TextView
            android:id="@+id/btn_title_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp15"
            android:gravity="center"
            android:paddingHorizontal="11dp"
            android:paddingVertical="3.5dp"
            android:text="编辑"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/ib_title_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp15"
            android:background="@null"
            android:paddingHorizontal="5dp"
            android:paddingVertical="3.5dp"
            android:visibility="invisible" />
    </RelativeLayout>
</LinearLayout>